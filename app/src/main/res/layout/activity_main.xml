<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/light_background_gradient"
            tools:context=".WeatherActivity">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_small"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <RadioButton
                    android:id="@+id/button_today"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/radio_button_states"
                    android:text="@string/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/radio_button_margin"/>

            <RadioButton
                    android:id="@+id/button_tomorrow"
                    android:button="@null"
                    android:background="@drawable/radio_button_states"
                    android:text="@string/tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/radio_button_margin"/>

        </RadioGroup>

        <ImageView
                android:id="@+id/forecast_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_sunny"
                app:layout_constraintVertical_bias="0.10"
                app:layout_constraintTop_toBottomOf="@id/radio_group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/forecast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_white"
                tools:text="Sunny"
                app:layout_constraintVertical_bias="0.025"
                app:layout_constraintTop_toBottomOf="@id/forecast_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/forecast_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22"
                android:textSize="@dimen/forecast_temperature_font_size"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintTop_toBottomOf="@id/forecast_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/celsius_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius_symbol"
                android:textSize="@dimen/forecast_temperature_celsius_symbol"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintTop_toTopOf="@id/forecast_temperature"
                app:layout_constraintLeft_toRightOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="@id/forecast_temperature"/>

        <ImageView
                android:id="@+id/icon_maximum_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_max_12_px"
                app:layout_constraintStart_toStartOf="@id/forecast_temperature"
                app:layout_constraintTop_toTopOf="@id/maximum_temperature"
                app:layout_constraintBottom_toBottomOf="@id/maximum_temperature"
                app:layout_constraintRight_toLeftOf="@id/maximum_temperature"/>

        <TextView
                android:id="@+id/maximum_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="24ยบ"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintLeft_toRightOf="@id/icon_maximum_temperature"
                app:layout_constraintTop_toBottomOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/icon_minimum_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_min_12_px"
                app:layout_constraintTop_toTopOf="@id/minimum_temperature"
                app:layout_constraintBottom_toBottomOf="@id/minimum_temperature"
                app:layout_constraintRight_toLeftOf="@id/minimum_temperature"/>

        <TextView
                android:id="@+id/minimum_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18ยบ"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintLeft_toRightOf="@id/icon_minimum_temperature"
                app:layout_constraintTop_toBottomOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/forecast_temperature"/>

        <ImageView
                android:id="@+id/icon_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wind_24_px"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/wind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2 km/h"
                app:layout_constraintStart_toStartOf="@id/icon_wind"
                app:layout_constraintEnd_toEndOf="@id/icon_wind"
                app:layout_constraintTop_toBottomOf="@id/icon_wind"/>

        <ImageView
                android:id="@+id/icon_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_humidity_24_px"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintEnd_toStartOf="@id/icon_wind"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/humidity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="50%"
                app:layout_constraintStart_toStartOf="@id/icon_humidity"
                app:layout_constraintEnd_toEndOf="@id/icon_humidity"
                app:layout_constraintTop_toBottomOf="@id/icon_humidity"/>

        <ImageView
                android:id="@+id/icon_raindrops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_raindrops_24_px"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintStart_toEndOf="@id/icon_wind"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forecast_temperature"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/raindrops_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 mm"
                app:layout_constraintStart_toStartOf="@id/icon_raindrops"
                app:layout_constraintEnd_toEndOf="@id/icon_raindrops"
                app:layout_constraintTop_toBottomOf="@id/icon_raindrops"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>